{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": ["**/tsconfig.json"]
    },
    "rules": {
        "@typescript-eslint/space-before-function-paren": 0,
        "@typescript-eslint/indent": ["warn", 4],
        "@typescript-eslint/no-misused-promises": 0
    }
}
